    <mvc:interceptors>
        <mvc:interceptor>
            <mvc:mapping path="/student/**" />
            <bean class="interceptor.StudentSecurityInterceptor" />
        </mvc:interceptor>
        <mvc:interceptor>
            <mvc:mapping path="/teacher/**" />
            <mvc:exclude-mapping path="/teacher/fee.htm" />
            <mvc:exclude-mapping path="/teacher/announcement.htm" />
            <mvc:exclude-mapping path="/teacher/settings.htm" />
            <bean class="interceptor.TeacherSecurityInterceptor" />
        </mvc:interceptor>
        <mvc:interceptor>
            <mvc:mapping path="/teacher/fee.htm" />
            <mvc:mapping path="/teacher/announcement.htm" />
            <mvc:mapping path="/teacher/settings.htm" />
            <bean class="interceptor.SuperAdminSecurityInterceptor" />
        </mvc:interceptor>
    </mvc:interceptors>
</beans>
